{{!< default}}

{{#tag}}
<header class="outer site-archive-header">
    <div class="inner site-header-content">
        <div class="tag-header">
            <h1 class="site-title">{{name}}</h1>
            <span class="tag-posts-counter" style="{{#if accent_color}}background:{{accent_color}};box-shadow: 0px 1px 6px -1px {{accent_color}}7a, 0px 3px 20px -2px {{accent_color}}7a{{else}}background:var(--accentColor);box-shadow: 0px 1px 6px -1px var(--accentColor50), 0px 3px 20px -2px var(--accentColor50){{/if}};box-sizing: border-box;">{{plural ../pagination.total empty='1' singular='%' plural='%'}}</span>
        </div>
        {{#if description}}
        <p class="site-description">{{description}}</p>
        {{/if}}
    </div>
</header>
{{/tag}}

{{!-- The main content area --}}
<main id="site-main" class="site-main outer">
    <div class="inner posts">
        <div class="post-feed">
            {{#foreach posts}}
                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}
            {{/foreach}}
        </div>
    </div>
</main>

