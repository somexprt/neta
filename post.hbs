{{!< default}}

{{!-- Everything inside the #post tags pulls data from the post --}}
{{#post}}

<main id="site-main" class="site-main outer">
  <div class="post inner">
		<article class="post-full {{post_class}} {{#unless feature_image}}no-image{{/unless}}">
			<header class="post-full-header">
        <h1 class="post-full-title">{{title}}</h1>
        <div class="post-full-byline">
					<section class="post-byline-content">
						<section class="post-byline-meta">
							{{#if primary_tag}}
								{{#primary_tag}}
								<span class="post-card-primary-tag">{{name}}</span>&nbsp;<span class="bull">&bull;</span>
								{{/primary_tag}}
							{{/if}}
							<span class="post-card-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date timeago="true"}}</time>&nbsp;<span class="bull">&bull;</span> {{reading_time minute="1&nbsp;мин." minutes="%&nbsp;мин."}}</span>
						</section>
					</section>
				</div>
				{{#has tag="#cover-post"}}
					{{#if feature_image}}
						{{#has tag="#excerpt-post"}}
							{{#if excerpt}}
								{{#has tag="#cover-aside"}}
									<div class="with-aside">
										<p class="excerpt">{{excerpt}}</p>
										<figure class="post-full-image aside">
											<img src="{{img_url feature_image}}" alt="{{title}}"/>
										</figure>
									</div>
								{{else}}
								<p class="excerpt">{{excerpt}}</p>
								<figure class="post-full-image">
									<img src="{{img_url feature_image}}" alt="{{title}}"/>
								</figure>
								{{/has}}
							{{/if}}
						{{else}}
						<figure class="post-full-image">
							<img src="{{img_url feature_image}}" alt="{{title}}"/>
						</figure>
						{{/has}}
					{{/if}}
				{{else has tag="#excerpt-post"}}
					{{#if excerpt}}
						<p class="excerpt">{{excerpt}}</p>
					{{/if}}
				{{/has}}
			</header>
			<section class="post-full-content">
				<div class="post-content">
					{{content}}
				</div>
				{{> post-share}}
				<section class="post-byline-meta">
					<span class="post-byline-date"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="DD MMMM YYYY"}}</time></span>
					{{#if tags}}
					<ul class="post-byline-tags">
					{{#foreach tags}}
						<li>
							<a href="{{url}}" title="{{name}}" class="tag tag-{{id}} {{slug}}">{{name}}</a>
						</li>
					{{/foreach}}
					</ul>
					{{/if}}
				</section>
			</section>
    </article>
  </div>
</main>

{{!-- Links to Previous/Next posts --}}
<aside class="read-next outer">
	<div class="inner">
		<div class="read-next-feed">
			{{#if primary_tag}}
				{{#get "posts" include="tags" filter="tags:{{primary_tag.slug}}+id:-{{id}}" limit="5" as |related-posts|}}
					{{#if related-posts}}
					<article class="read-next-card">
						<header class="read-next-card-header">
							{{#../primary_tag}}
							<h2><span>Ещё по тегу</span> <a href="{{url}}">{{name}}</a></h2>
							{{/../primary_tag}}
						</header>
						<div class="read-next-card-content">
							<ul class="clean-posts-feed">
								{{#foreach related-posts}}
									{{> "clean-post-card"}}
								{{/foreach}}
							</ul>
						</div>
						{{!-- <footer class="read-next-card-footer">
							<a href="{{#../primary_tag}}{{url}}{{/../primary_tag}}">{{plural meta.pagination.total empty='No posts' singular='% post' plural='See all % posts'}}
						→</a>
						</footer> --}}
					</article>
					{{/if}}
				{{/get}}
			{{/if}}

			{{#next_post}}
			{{> "post-card"}}
			{{/next_post}}

			{{#prev_post}}
			{{> "post-card"}}
			{{/prev_post}}
		</div>
	</div>
</aside>

{{/post}}

{{#contentFor "scripts"}}
<script>
  $(document).ready(function () {
		// FitVids - start
		var $postContent = $(".post-full-content");
		$postContent.fitVids();
		// FitVids - end
		hljs.highlightAll();
  });
</script>
{{/contentFor}}