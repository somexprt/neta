        <section class="error-message">
            <h1 class="error-code">{{statusCode}}</h1>
            <p class="error-description">Такой страницы нет</p>
            <div style="display:flex;flex-direction:row"><a class="error-link btn" href="{{@site.url}}">На главную</a></div>
        </section>

