<li class="post-card {{post_class}}">
{{#has tag="#cover-mini"}}
  {{>clean-posts/cover}}
  <h3 class="post-card-title">
    <a href="{{url}}">
{{else}}
  <h3 class="post-card-title">
    <a href="{{url}}">
      {{^is "post"}}
        {{#has tag="подкасты"}}🎙{{/has}}
        {{#has tag="читаю"}}📚{{/has}}
        {{#has tag="смотрю"}}🎬{{/has}}
      {{/is}}
{{/has}}
      {{title}}
    </a>
  </h3>
</li>