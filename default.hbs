<!DOCTYPE html>
<html lang="{{@site.locale}}">
<head>

	<title>{{#is "home"}}{{@site.title}}{{else}}{{meta_title}}{{/is}}</title>
	<meta charset="utf-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="HandheldFriendly" content="True" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="stylesheet" type="text/css" href="{{asset "built/screen.css"}}" />
	{{#is "post, page"}}<link rel="stylesheet" type="text/css" href="{{asset "built/highlight.css"}}" />{{/is}}
	{{ghost_head}}

</head>
<body class="{{body_class}}">
<div class="viewport">

{{^is "author,tag"}}
{{#if @site.cover_image}}
<div class="gh-head-cover gh-head-bg-image" style="background-image: url({{@site.cover_image}})"></div>
{{/if}}
{{/is}}

{{> header}}

{{{body}}}

{{> footer}}

</div>

{{> search}}

<script
    src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous">
</script>
<script src="{{asset "built/global.js"}}"></script>
<script>
$(document).ready(function () {
    // Mobile Menu Trigger
    $('.gh-burger').click(function () {
        $('body').toggleClass('gh-head-open');
    });
    // FitVids - Makes video embeds responsive
    $(".gh-content").fitVids();
});
// DoubleHover
doubleHover('a', 'hover');
</script>
{{#if pagination.pages}}
  <script>var numberPaged = {{pagination.pages}};</script>
  <script src="{{asset "built/index.js"}}"></script>
{{/if}}
{{#is "post, page"}}
  <script src="{{asset "built/post.js"}}"></script>
{{/is}}
{{{block "search_js"}}}
{{{block "scripts"}}}

{{ghost_foot}}

</body>
</html>
